<!DOCTYPE html>
<html lang="en">
<head>
    <title>All Resources | Docs for Health</title>
    <%- include src/partials/header.ejs %>
</head>
<%- include src/partials/start.ejs %>
    <div class="page-header">
        <div class="page-header__section">
            <h1 class="heading heading--2">
                <span class="heading__title">Resources</span>
            </h1>
            <p class="page-header__metadata">
                Found 13 of 14 resources
            </p>
        </div>
        <div class="page-header__section page-header__section--right">
            <p class="page-header__metadata page-header__metadata--secondary">
                Showing 4 of 5 categories
            </p>
            <div class="form form--inline page-header__form">
                <input type="text"
                    class="form__control form__control--search"
                    placeholder="Search for a resource">
            </div>
        </div>
    </div>
    <div class="resource-categories">
        <div class="resource-categories__metadata">
            Showing 4 of 5 categories
        </div>
        <ul class="resource-categories__list">
            <% categories.forEach(function(category) { %>
                <li>
                    <button type="button"
                        class="resource-categories__category
                            <%= category !== "Food" && "resource-categories__category--active"  %>">
                        <%= category %>
                    </button>
                </li>
            <% }); %>
        </ul>
    </div>
    <ul class="resource-previews">
        <% results.forEach(function(result) { %>
            <li class="resource-previews__preview">
                <div class="resource-previews__preview__info">
                    <h2 class="heading heading--3">
                        <a href="/resource.html" class="link">
                            <%= result.title %>
                        </a>
                    </h2>
                    <p class="text">
                        <%= result.description %>
                    </p>
                </div>
                <ul class="resource-previews__preview__tags">
                    <li class="tag tag--notable">
                        <%= result.type %>
                    </li>
                    <% result.tags.forEach(function(tag) { %>
                        <li class="tag">
                            <%= tag %>
                        </li>
                    <% }); %>
                </ul>
            </li>
        <% }); %>
    </ul>
    <%- include src/partials/feedback-loading-card.ejs %>
<%- include src/partials/end.ejs %>
</html>
