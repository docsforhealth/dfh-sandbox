<!DOCTYPE html>
<html lang="en">
<head>
    <title>Buprenorphine Basics | Docs for Health</title>
    <%- include src/partials/header.ejs %>
</head>
<%- include src/partials/start.ejs %>
    <div class="toolkit-detail-container">
        <div class="toolkit-detail-container__item toolkit-detail-container__item--list">
            <div class="toolkit-detail-container__header">
                <h1 class="heading heading--3">
                    <a href="/toolkits.html" class="heading__nav">
                        <img src="assets/images/icon-arrow.svg"
                            class="heading__nav__image"
                            alt="Back arrow to return to previous page">
                        <span class="heading__nav__text">
                            All toolkits
                        </span>
                    </a>
                    <span class="heading--one-line heading--bold">
                        Buprenorphine Basics
                    </span>
                </h1>
            </div>
            <div class="toolkit-topics">
                <button type="button" class="toolkit-topics__toggle">
                    Show all <% topics.length %> sections
                </button>
                <ol class="toolkit-topics__list">
                    <% topics.forEach(function(topic, index) { %>
                        <li class="toolkit-topics__topic
                            <%= index < currentIndex ? "toolkit-topics__topic--visited" : "" %>
                            <%= index === currentIndex ? "toolkit-topics__topic--current" : "" %>">
                            <div class="<%= index === currentIndex ? "toolkit-topics__active" : "" %>">
                                <a href="#" class="link">
                                    <p class="text text--large text--one-line">
                                        <%= topic.title %>
                                    </p>
                                </a>
                                <p class="text text--one-line">
                                    <%= topic.presenter ? topic.presenter : "" %>
                                </p>
                            </div>
                        </li>
                    <% }); %>
                </ol>
            </div>
        </div>
        <div class="toolkit-detail-container__item toolkit-active-topic">
            <div class="toolkit-detail-container__header toolkit-active-topic__header">
                <h2 class="heading heading--3 heading--one-line">
                    <%= topics[currentIndex].title %>
                </h2>
                <p class="toolkit-active-topic__header__presenter">
                    <%= topics[currentIndex].presenter %>
                </p>
            </div>
            <div class="toolkit-active-topic__video">
                <!-- Due to limitation in compilation, need to hardcode for styling -->
                <img src="assets/images/placeholder-video-preview-2.png"
                    alt="<%= topics[currentIndex].title %> video thumbnail">
            </div>
            <div class="margin-b-1">
                <p class="text">
                    <span class="text--bold">This section covers</span>:
                    <span class="text--light">
                        <%= topics[currentIndex].topics.join(", ") %>
                    </span>
                </p>
                <p class="text">
                    <%= topics[currentIndex].description %>
                </p>
            </div>
            <h3 class="heading heading--3">
                <span class="heading__title">Further reading</span>
            </h3>
            <ul>
                <% topics[currentIndex].resources.forEach(function(resource) { %>
                    <li>
                        <a href="<%= resource.url %>" class="link">
                            <%= resource.title %>
                        </a>
                    </li>
                <% }); %>
            </ul>
            <div class="toolkit-active-topic__controls button-container button-container--expand-width">
                <button type="button"
                    class="button-container__button button button--outline">
                    Back
                </button>
                <button type="button"
                    class="button-container__button button button--secondary">
                    Next
                </button>
            </div>
        </div>
    </div>

<%- include src/partials/end.ejs %>
</html>
